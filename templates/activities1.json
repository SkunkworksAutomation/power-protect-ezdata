{
  "apiEndpoint": "activities",
  "apiPaging": "random",
  "apiVersion": 3,
  "fileName": "dm-activities.csv",
  "sortField": "startedAt",
  "sortOrder": "DESC",
  "lookBack": 1,
  "lookBackUnit": "days",
  "lookBackFormat": "yyyy-MM-ddTHH:mm:ss.fffZ",
  "filters": [
    "classType eq \"JOB\"",
    "and category eq \"BACKUP\"",
    "and startedAt ge \"{{lookBack}}\""
  ],
  "fields": [
    {
      "label": "displayId",
      "value": "displayId"
    },
    {
      "label": "description",
      "value": "description"
    },
    {
      "label": "classType",
      "value": "classType"
    },
    {
      "label": "category",
      "value": "category"
    },
    {
      "label": "createdAt",
      "value": "createdAt"
    },
    {
      "label": "startedAt",
      "value": "startedAt"
    },
    {
      "label": "completedAt",
      "value": "completedAt"
    },
    {
      "label": "assetName",
      "value": "references|?usage eq ASSET|name"
    },
    {
      "label": "hostName",
      "value": "references|?usage eq SOURCE_HOST|name"
    },
    {
      "label": "policyName",
      "value": "references|?usage eq PROTECTION_POLICY|name"
    },
    {
      "label": "storageTarget",
      "value": "references|?usage eq DATA_TARGET|name"
    },
    {
      "label": "state",
      "value": "state"
    },
    {
      "label": "status",
      "value": "result.status"
    },
    {
      "label": "scheduleType",
      "value": "scheduleInfo.type"
    },
    {
      "label": "scheduleDescription",
      "value": "scheduleInfo.description"
    },
    {
      "label": "scheduleNext",
      "value": "scheduleInfo.nextScheduledTime"
    }
  ]
}
